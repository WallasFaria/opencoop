<p id="notice"><%= notice %></p>

<div class="container">
	<div class="mt-4 mb-4">
  	<h2>Conta-Corrente</h2>
  </div>

  <div class="row">
  	<div class="col-md-4 transacoes-info">
  		<div class="mb-3">
  			<h4>Saldo</h4>
  			<div class="saldo mt-4 mb-4">
  				<p><span>R$</span> <%= number_to_currency(@cooperation.account.balance, prefix: nil) %></p>
  			</div>
  		</div>
  		<div class="mt-4">
  			<h4>Quantidade de transações</h4>
  			<table class="table table-striped">
  				<thead>
			      <tr>
			        <th>Data</th>
			        <th>Quantidade</th>
			      </tr>
			    </thead>
			    <tbody>
		      	<tr>
		      		<td>18/10/2019</td>
		      		<td>4</td>
		      	</tr>
			    </tbody>
  			</table>
  		</div>
  	</div>
  	<div class="col-md-8">
  		<table class="table table-striped">
		    <thead>
		      <tr>
		        <th>Data</th>
		        <th>Descrição</th>
		        <th>Valor</th>
		      </tr>
		    </thead>
		    <tbody>
		      <% @cooperation.transactions.each do |transaction| %>
		      	<tr>
		      		<td><%= l transaction.created_at, format: :short %></td>
		      		<td><%= transaction.description %></td>
		      		<td><%= number_to_currency(transaction.value) %></td>
		      	</tr>
		      <% end %>
		    </tbody>
		  </table>
  	</div>
  </div>
</div>
