<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Cooperativas</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Segmento</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cooperatives.each do |cooperative| %>
        <tr>
          <td><%= cooperative.name %></td>
          <td><%= cooperative.segment_id %></td>
          <td><%= cooperative.status %></td>
          <td><%= link_to 'Ver', cooperative %></td>
          <td><%= link_to 'Editar', edit_cooperative_path(cooperative) %></td>
          <td><%= link_to 'Apagar', cooperative, method: :delete, data: { confirm: 'Deseja apagar esta cooperativa?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nova Cooperativa', new_cooperative_path %>
</div>
