<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Cooperativas</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Segmento</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @cooperatives.each do |cooperative| %>
        <tr>
          <td><%= cooperative.name %></td>
          <td><%= cooperative.segment.name %></td>
          <% cooperation = cooperative.cooperations.find_by(associate_id: @current_associate.id) %>
          <td><%= link_to 'Conta-Corrente', [cooperative, cooperation], {class: "orange"} if cooperation %></td>
          <td><%= link_to 'Visualizar PÃ¡gina', cooperative %></td>
          <td><%= link_to 'Editar', edit_cooperative_path(cooperative) %></td>
          <td><%= link_to 'Apagar', cooperative, method: :delete, data: { confirm: 'Deseja apagar esta cooperativa?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nova Cooperativa', new_cooperative_path, {class: "btn btn-perfil"} %>
</div>
